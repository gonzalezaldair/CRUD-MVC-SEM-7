@using CapaEntidad;
@model List<UsuarioCLS>

<div class="card">
    <div class="card-header">
        Lista Usuario
    </div>
    <div class="card-body">

        @if (TempData["Mensaje"] != null)
        {

            <div class="form-group">
                <div class="alert alert-success" role="alert">
                    @TempData["Mensaje"]
                </div>
            </div>
        }

        <a asp-action="CrearUsuario" asp-controller="Usuario" class="btn btn-success"><i class="bi bi-plus-circle"></i> Crear Nuevo</a>
        <hr />
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Corrreo</th>
                    <th>Activo</th>
                    <th>Rol</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.nombreusuario</td>
                        <td>@item.correo</td>
                        <td> @((item.activo == true) ? "Activo" : "Inactivo")</td>
                        <td>@item.rol</td>
                        <td>
                            <a asp-action="EditarUsuario" asp-controller="Usuario" class="btn btn-primary btn-sm" asp-route-idUsuario="@item.idUsuario">Editar</a>
                            <a asp-action="EliminarUsuario" asp-controller="Usuario" class="btn btn-danger btn-sm" asp-route-idUsuario="@item.idUsuario">Eliminar</a>
                        </td>
                    </tr>

                }
            </tbody>
        </table>

    </div>
</div>